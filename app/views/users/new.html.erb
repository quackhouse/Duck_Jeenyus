<div class="padded">
  <% if @user.errors.any? %>
<ul>
  <% @user.errors.messages.each do |error, msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@user) do |f| %>
<%= f.label :name %> <br>
<%= f.text_field :name %> <br>
  <%= f.label :email %> <br>
  <%= f.text_field :email %><br>
  <%= f.label :password %> <br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %> <br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Sign Up" %>
<% end %>

</div>